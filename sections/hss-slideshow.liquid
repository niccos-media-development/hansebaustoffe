{{ 'section-slideshow.css' | asset_url | stylesheet_tag }}

{% liquid
    assign block_section_class = 'block-section'
    unless section.settings.color_scheme == 'background-1'
        assign block_section_class = block_section_class | append: ' block-section-padded'
    endunless
%}

<style>
    /* Verhindert unnötigen Platz unter der Slideshow */
    .slideshow-container {
        margin-bottom: 0 !important;
        padding-bottom: 0 !important;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* Slideshow-Slides fixen */
    .slideshow-slide {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: auto; /* Höhe anpassen, damit Bilder sichtbar sind */
        min-height: 100px; /* Mindesthöhe setzen, falls kein Bild vorhanden */
        margin-bottom: 0 !important;
        opacity: 1;
        transition: opacity 0.8s ease-in-out;
    }

    /* Slideshow-Bild richtig anzeigen */
    .slideshow-media {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }

    .slideshow-media img {
        display: block;
        width: 100%;
        height: auto;
        margin-bottom: 0 !important;
    }

    /* Pagination-Dots zentrieren */
    .slideshow-pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        margin-top: 5px;
        margin-bottom: 0 !important;
    }

    .pagination-dot {
        width: 12px;
        height: 12px;
        background-color: #bbb;
        border-radius: 50%;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s;
    }

    .pagination-dot:hover {
        background-color: #888;
        transform: scale(1.2);
    }

    .pagination-dot.active {
        background-color: #333;
        transform: scale(1.4);
    }
</style>

<div class="color-{{ section.settings.color_scheme }}">
    <div class="{% if section.settings.full_width %}block-section-fullwidth{% else %}container{% endif %}">
        <div class="{{ block_section_class }}">
            <div class="slideshow-container" 
                id="Slideshow-{{ section.id }}" 
                data-autoplay="{{ section.settings.auto_rotate }}" 
                data-speed="{{ section.settings.slide_duration }}"
                data-animation="{{ section.settings.animation_type }}">
                
                {%- for block in section.blocks -%}
                    <div class="slideshow-slide color-background-1 {% if forloop.first %}active{% endif %}" 
                        id="Slide-{{ section.id }}-{{ forloop.index }}">
                        <div class="slideshow-media">
                            {%- if block.settings.image != blank -%}
                                <a href="{{ block.settings.link | default: '#' }}" 
                                    {% if block.settings.link == blank %}style="pointer-events: none;"{% endif %}>
                                    <img src="{{ block.settings.image | image_url }}" 
                                         alt="{{ block.settings.image.alt | escape }}">
                                </a>
                            {%- else -%}
                                <p style="text-align: center; color: #777;">Kein Bild ausgewählt</p>
                            {%- endif -%}
                        </div>
                    </div>
                {%- endfor -%}
            </div>

            {%- if section.blocks.size > 1 -%}
            <div class="slideshow-pagination">
                {%- for block in section.blocks -%}
                    <button class="pagination-dot" data-index="{{ forloop.index0 }}"></button>
                {%- endfor -%}
            </div>
            {%- endif -%}
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const slideshow = document.getElementById("Slideshow-{{ section.id }}");
        if (!slideshow) return;
        
        const slides = slideshow.querySelectorAll(".slideshow-slide");
        const dots = slideshow.querySelectorAll(".pagination-dot");

        let currentIndex = 0;
        const totalSlides = slides.length;
        const autoplay = slideshow.dataset.autoplay === "true";
        const speed = parseInt(slideshow.dataset.speed) * 1000;
        const animationType = slideshow.dataset.animation; // "slide" oder "fade"
        let autoplayInterval;

        function showSlide(index) {
            slides.forEach((slide, i) => {
                slide.classList.remove("active");

                if (animationType === "slide") {
                    slide.style.transform = `translateX(${(i - index) * 100}%)`;
                }
            });

            slides[index].classList.add("active");
            dots.forEach(dot => dot.classList.remove("active"));
            dots[index]?.classList.add("active");
            currentIndex = index;
        }

        function goToSlide(index) {
            showSlide(index);
        }

        if (autoplay) {
            autoplayInterval = setInterval(() => {
                showSlide((currentIndex + 1) % totalSlides);
            }, speed);
        }

        dots.forEach(dot => dot.addEventListener("click", () => goToSlide(parseInt(dot.dataset.index))));

        showSlide(currentIndex);
    });
</script>

{% schema %}
{
    "name": "HSS Slideshow",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "checkbox",
            "id": "full_width",
            "label": "Full Width",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "auto_rotate",
            "label": "Auto Rotate Slides",
            "default": true
        },
        {
            "type": "range",
            "id": "slide_duration",
            "label": "Slide Duration (seconds)",
            "min": 3,
            "max": 10,
            "step": 1,
            "default": 5
        },
        {
            "type": "select",
            "id": "animation_type",
            "label": "Art der Animation",
            "options": [
                { "value": "fade", "label": "Überblendung" },
                { "value": "slide", "label": "Dia" }
            ],
            "default": "fade"
        }
    ],
    "blocks": [
        {
            "type": "slide",
            "name": "Slide",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Slide Image"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Slide Link"
                }
            ]
        }
    ]
}
{% endschema %}

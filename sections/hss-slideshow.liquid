{{ 'section-slideshow.css' | asset_url | stylesheet_tag }}

<style>
    /* Sichtbarkeit der Slideshow basierend auf den Einstellungen */
    {% if section.settings.show_on_desktop == false %}
    @media (min-width: 990px) { #Slideshow-{{ section.id }} { display: none !important; } }
    {% endif %}
    
    {% if section.settings.show_on_tablet == false %}
    @media (min-width: 750px) and (max-width: 989px) { #Slideshow-{{ section.id }} { display: none !important; } }
    {% endif %}
    
    {% if section.settings.show_on_mobile == false %}
    @media (max-width: 749px) { #Slideshow-{{ section.id }} { display: none !important; } }
    {% endif %}

    /* Slideshow Container */
    .slideshow-container {
        position: relative;
        width: 100%;
        max-width: 100%;
        overflow: hidden;
        margin: 0 auto;
        padding: 0;
    }

    /* Slideshow Slides */
    .slideshow-slide {
        display: none;
        width: 100%;
        transition: opacity 0.5s ease-in-out;
    }

    .slideshow-slide.active {
        display: block;
        opacity: 1;
    }

    /* Bild Styling */
    .slideshow-media img {
        width: 100%;
        height: auto;
        display: block;
    }

    /* Pagination Styling */
    .slideshow-pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        margin-top: 5px;
    }

    .pagination-dot {
        width: 12px;
        height: 12px;
        background-color: #bbb;
        border-radius: 50%;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s;
    }

    .pagination-dot:hover {
        background-color: #888;
        transform: scale(1.2);
    }

    .pagination-dot.active {
        background-color: #333;
        transform: scale(1.4);
    }
</style>

<div class="color-{{ section.settings.color_scheme }}">
    <div class="{% if section.settings.full_width %}block-section-fullwidth{% else %}container{% endif %}">
        <div class="slideshow-container" id="Slideshow-{{ section.id }}"
            data-autoplay="{{ section.settings.auto_rotate }}" 
            data-speed="{{ section.settings.slide_duration }}"
            data-animation="{{ section.settings.animation_type }}">
            
            {%- for block in section.blocks -%}
                <div class="slideshow-slide {% if forloop.first %}active{% endif %}" id="Slide-{{ section.id }}-{{ forloop.index }}">
                    <div class="slideshow-media">
                        {%- if block.settings.image -%}
                            <a href="{{ block.settings.link | default: '#' }}" {% if block.settings.link == blank %}style="pointer-events: none;"{% endif %}>
                                <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt | escape }}">
                            </a>
                        {%- endif -%}
                    </div>
                </div>
            {%- endfor -%}
        </div>

        {%- if section.blocks.size > 1 -%}
        <div class="slideshow-pagination">
            {%- for block in section.blocks -%}
                <button class="pagination-dot" data-index="{{ forloop.index0 }}"></button>
            {%- endfor -%}
        </div>
        {%- endif -%}
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const slideshow = document.getElementById("Slideshow-{{ section.id }}");
        if (!slideshow) return;

        const slides = slideshow.querySelectorAll(".slideshow-slide");
        const dots = slideshow.querySelectorAll(".pagination-dot");

        let currentIndex = 0;
        const totalSlides = slides.length;
        const autoplay = slideshow.dataset.autoplay === "true";
        const speed = parseInt(slideshow.dataset.speed) * 1000;
        let autoplayInterval;

        function showSlide(index) {
            slides.forEach((slide, i) => {
                slide.classList.remove("active");
            });

            slides[index].classList.add("active");
            dots.forEach(dot => dot.classList.remove("active"));
            dots[index]?.classList.add("active");
            currentIndex = index;
        }

        function goToSlide(index) {
            showSlide(index);
        }

        if (autoplay) {
            autoplayInterval = setInterval(() => {
                showSlide((currentIndex + 1) % totalSlides);
            }, speed);
        }

        dots.forEach(dot => dot.addEventListener("click", () => goToSlide(parseInt(dot.dataset.index))));

        showSlide(currentIndex);
    });
</script>

{% schema %}
{
    "name": "HSS Slideshow",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "checkbox",
            "id": "full_width",
            "label": "Full Width",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "auto_rotate",
            "label": "Auto Rotate Slides",
            "default": true
        },
        {
            "type": "range",
            "id": "slide_duration",
            "label": "Slide Duration (seconds)",
            "min": 3,
            "max": 10,
            "step": 1,
            "default": 5
        },
        {
            "type": "select",
            "id": "animation_type",
            "label": "Art der Animation",
            "options": [
                { "value": "fade", "label": "Ãœberblendung" },
                { "value": "slide", "label": "Dia" }
            ],
            "default": "fade"
        },
        {
            "type": "checkbox",
            "id": "show_on_desktop",
            "label": "Auf Desktop anzeigen",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "show_on_tablet",
            "label": "Auf Tablet anzeigen",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "show_on_mobile",
            "label": "Auf Mobile anzeigen",
            "default": true
        }
    ],
    "blocks": [
        {
            "type": "slide",
            "name": "Slide",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Slide Image"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Slide Link"
                }
            ]
        }
    ]
}
{% endschema %}

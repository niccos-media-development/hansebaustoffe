{%- if section.blocks.size > 1 -%}
	{{ 'flickity.css' | asset_url | stylesheet_tag }}
    <script src="{{ 'flickity.pkgd.js' | asset_url }}" defer></script>
    <script src="{{ 'slideshow.js' | asset_url }}" defer></script>
{%- endif -%}

{{ 'section-slideshow.css' | asset_url | stylesheet_tag }}

{% liquid
    assign block_section_class = 'block-section'
    unless section.settings.color_scheme == 'background-1'
        assign block_section_class = block_section_class | append: ' block-section-padded'
    endunless
%}

<style>
    {% if section.settings.show_on_desktop == false %}
    @media (min-width: 990px) { 
        #Slideshow-{{ section.id }}, 
        #Slideshow-{{ section.id }} .slideshow-controls { display: none !important; } 
    }
    {% endif %}
    
    {% if section.settings.show_on_tablet == false %}
    @media (min-width: 750px) and (max-width: 989px) { 
        #Slideshow-{{ section.id }}, 
        #Slideshow-{{ section.id }} .slideshow-controls { display: none !important; } 
    }
    {% endif %}
    
    {% if section.settings.show_on_mobile == false %}
    @media (max-width: 749px) { 
        #Slideshow-{{ section.id }}, 
        #Slideshow-{{ section.id }} .slideshow-controls { display: none !important; } 
    }
    {% endif %}
</style>

<div class="color-{{ section.settings.color_scheme }}">
    <div class="{% if section.settings.full_width %}block-section-fullwidth{% else %}container{% endif %}">
        <div class="{{ block_section_class }}">
            <div class="slideshow slideshow-size-{{ section.settings.slide_height }}" 
                id="Slideshow-{{ section.id }}" 
                data-autoplay="{{ section.settings.auto_rotate }}" 
                data-speed="{{ section.settings.slide_duration }}">
                
                {%- for block in section.blocks -%}
                    <div class="slideshow-slide color-background-1" id="Slide-{{ section.id }}-{{ forloop.index }}">
                        <div class="slideshow-media">
                            {%- if block.settings.image -%}
                                <a href="{{ block.settings.link | default: '#' }}" 
                                    {% if block.settings.link == blank %}style="pointer-events: none;"{% endif %}>
                                    <img src="{{ block.settings.image | image_url }}" 
                                         alt="{{ block.settings.image.alt | escape }}">
                                </a>
                            {%- endif -%}
                        </div>
                    </div>
                {%- endfor -%}
            </div>

            {%- if section.blocks.size > 1 -%}
            <div class="slideshow-controls">
                <button class="prev-slide">&#10094;</button>
                <button class="next-slide">&#10095;</button>
                <div class="slideshow-pagination">
                    {%- for block in section.blocks -%}
                        <button class="pagination-dot" data-index="{{ forloop.index0 }}"></button>
                    {%- endfor -%}
                </div>
            </div>
            {%- endif -%}
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const slideshow = document.getElementById("Slideshow-{{ section.id }}");
        if (!slideshow) return;
        
        const slides = slideshow.querySelectorAll(".slideshow-slide");
        const dots = slideshow.querySelectorAll(".pagination-dot");
        const prevButton = slideshow.querySelector(".prev-slide");
        const nextButton = slideshow.querySelector(".next-slide");

        let currentIndex = 0;
        const totalSlides = slides.length;
        const autoplay = slideshow.dataset.autoplay === "true";
        const speed = parseInt(slideshow.dataset.speed) * 1000;
        let autoplayInterval;

        function showSlide(index) {
            slides.forEach(slide => slide.style.display = "none");
            dots.forEach(dot => dot.classList.remove("active"));

            slides[index].style.display = "block";
            dots[index]?.classList.add("active");
            currentIndex = index;
        }

        function nextSlide() {
            showSlide((currentIndex + 1) % totalSlides);
        }

        function prevSlide() {
            showSlide((currentIndex - 1 + totalSlides) % totalSlides);
        }

        function goToSlide(index) {
            showSlide(index);
        }

        if (autoplay) {
            autoplayInterval = setInterval(nextSlide, speed);
        }

        prevButton?.addEventListener("click", prevSlide);
        nextButton?.addEventListener("click", nextSlide);
        dots.forEach(dot => dot.addEventListener("click", () => goToSlide(parseInt(dot.dataset.index))));

        showSlide(currentIndex);
    });
</script>

{% schema %}
{
    "name": "HSS Slideshow",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "checkbox",
            "id": "full_width",
            "label": "Full Width",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "auto_rotate",
            "label": "Auto Rotate Slides",
            "default": true
        },
        {
            "type": "range",
            "id": "slide_duration",
            "label": "Slide Duration (seconds)",
            "min": 3,
            "max": 10,
            "step": 1,
            "default": 5
        },
        {
            "type": "checkbox",
            "id": "show_on_desktop",
            "label": "Show on Desktop",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "show_on_tablet",
            "label": "Show on Tablet",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "show_on_mobile",
            "label": "Show on Mobile",
            "default": true
        }
    ],
    "blocks": [
        {
            "type": "slide",
            "name": "Slide",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Slide Image"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Slide Link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "HSS Slideshow",
            "category": "Custom Content",
            "blocks": [
                {
                    "type": "slide"
                }
            ]
        }
    ]
}
{% endschema %}

<div class="hss-promo-carousel">
  <div class="hss-promo-carousel-holder" id="carousel-{{ section.id }}">
    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        <a href="{{ block.settings.url }}" class="hss-promo-item">
          <div class="hss-promo-image hexagon {% if block.settings.highlight %}hss-promo-highlight{% endif %}">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | img_url: '200x' }}" alt="{{ block.settings.heading }}">
            {% else %}
              <div class="hss-placeholder">+</div>
            {% endif %}
          </div>
          {% if block.settings.heading != blank %}
            <span class="hss-promo-title">{{ block.settings.heading }}</span>
          {% endif %}
        </a>
      {% endfor %}
    {% else %}
      <p class="hss-no-content">⚠️ Keine Kategorien hinzugefügt. Bitte im Shopify-Editor Blöcke hinzufügen.</p>
    {% endif %}
  </div>
</div>

<style>
  .hss-promo-carousel {
    background: {{ section.settings.background_color }};
    padding: 20px 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hss-promo-carousel-holder {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: {{ section.settings.desktop_distance }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    white-space: nowrap;
    position: relative;
    max-width: 100%;
    padding: 10px;
  }

  .hss-promo-carousel-holder::-webkit-scrollbar {
    display: none;
  }

  .hss-promo-item {
    text-align: center;
    text-decoration: none;
    font-size: {{ section.settings.fontsize }}px;
    font-weight: 600;
    color: {{ section.settings.text_color }};
    font-family: {{ section.settings.font.family }}, sans-serif;
    flex: 0 0 auto;
  }

  /* HEXAGON-FORM */
  .hexagon {
    width: {{ section.settings.desktop_size }}px;
    height: {{ section.settings.desktop_size | times: 1.15 }}px;
    background-color: {{ section.settings.icon_background }};
    position: relative;
    clip-path: polygon(
      50% 0%, 100% 25%, 100% 75%,
      50% 100%, 0% 75%, 0% 25%
    );
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    outline: {{ section.settings.border_width }}px solid {{ section.settings.border_color }}; /* Gleichmäßiger Rand um das Hexagon */
  }

  .hexagon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hss-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    color: #ccc;
    background: #f5f5f5;
  }

  .hss-promo-title {
    display: block;
    margin-top: 5px;
    max-width: {{ section.settings.desktop_size }}px;
    word-wrap: break-word;
    overflow-wrap: break-word;
    text-align: center;
    white-space: normal;
    line-height: 1.2;
    font-size: {{ section.settings.fontsize }}px;
    max-height: 3.6em;
    overflow: hidden;
  }

  .hss-no-content {
    text-align: center;
    font-size: 18px;
    color: red;
    font-weight: bold;
  }

  @media only screen and (max-width: 768px) {
    .hss-promo-carousel-holder {
      justify-content: flex-start;
      padding: 10px 0;
      gap: {{ section.settings.mobile_distance }}%;
    }

    .hss-promo-item {
      flex: 0 0 auto;
      margin: 0 auto;
    }

    .hexagon {
      width: {{ section.settings.mobile_size }}px;
      height: {{ section.settings.mobile_size | times: 1.15 }}px;
    }

    .hss-promo-title {
      max-width: {{ section.settings.mobile_size }}px;
    }
  }
</style>

{% schema %}
{
  "name": "HSS Hexagon Cards",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "default": "#f2f2f2",
      "label": "Hintergrundfarbe"
    },
    {
      "type": "color",
      "id": "icon_background",
      "default": "#ffffff",
      "label": "Hintergrundfarbe der Hexagons"
    },
    {
      "type": "range",
      "id": "desktop_size",
      "min": 50,
      "max": 150,
      "step": 1,
      "default": 92,
      "label": "Größe der Hexagons (Desktop, px)"
    },
    {
      "type": "range",
      "id": "mobile_size",
      "min": 50,
      "max": 150,
      "step": 1,
      "default": 80,
      "label": "Größe der Hexagons (Mobile, px)"
    },
    {
      "type": "range",
      "id": "desktop_distance",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 20,
      "label": "Abstand zwischen Hexagons (Desktop, px)"
    },
    {
      "type": "range",
      "id": "mobile_distance",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 10,
      "label": "Abstand zwischen Hexagons (Mobile, px)"
    },
    {
      "type": "color",
      "id": "border_color",
      "default": "#ddd",
      "label": "Randfarbe der Hexagons"
    },
    {
      "type": "range",
      "id": "border_width",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 2,
      "label": "Randdicke der Hexagons (px)"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Kategorie",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Bild"
        },
        {
          "type": "text",
          "id": "heading",
          "default": "Kategorie",
          "label": "Titel"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "HSS Hexagon Cards",
      "blocks": [
        { "type": "category" },
        { "type": "category" },
        { "type": "category" }
      ]
    }
  ]
}
{% endschema %}

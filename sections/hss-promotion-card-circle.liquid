.hss-promo-carousel {
  background: {{ section.settings.background_color }};
  padding: 20px 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: {{ section.settings.top_margin }}px;
  margin-bottom: {{ section.settings.bottom_margin }}px;
}

.hss-promo-carousel-holder {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  gap: {{ section.settings.desktop_distance }}px;
  overflow-x: auto;
  scroll-behavior: smooth;
  white-space: nowrap;
  position: relative;
  max-width: 100%;
  padding: 10px;
}

.hss-promo-item-wrapper {
  text-align: center;
  font-size: {{ section.settings.fontsize }}px;
  font-weight: 600;
  color: {{ section.settings.text_color }};
  font-family: {{ section.settings.font.family }}, sans-serif;
  text-decoration: none;
  display: block;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  height: 100%;
}

.hss-promo-item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.hss-promo-image {
  display: flex;
  justify-content: center;
  align-items: center;
  height: {{ section.settings.desktop_size }}px; /* Feste Höhe für das Hexagon */
  width: {{ section.settings.desktop_size }}px;
  margin: 0 auto;
}

.hexagon {
  width: 100%;
  height: 100%;
  background-color: {{ section.settings.icon_background }};
  position: relative;
  clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.hexagon-img-wrapper {
  width: 100%;
  height: 100%;
  overflow: hidden;
  clip-path: inherit;
}

.hexagon-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hss-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  color: #ccc;
  background: #f5f5f5;
}

.hss-promo-title-wrapper {
  margin-top: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hss-promo-title {
  word-wrap: break-word;
  overflow-wrap: break-word;
  text-align: center;
  white-space: normal;
  line-height: 1.2;
  font-size: {{ section.settings.fontsize }}px;
  max-width: 100%;
  max-height: 3.6em;
  overflow: hidden;
  hyphens: auto;
}

.hss-no-content {
  text-align: center;
  font-size: 18px;
  color: red;
  font-weight: bold;
}

.hss-promo-item-wrapper a {
  color: inherit;
  text-decoration: none;
}

@media only screen and (max-width: 768px) {
  .hss-promo-carousel-holder {
    justify-content: flex-start;
    padding: 10px 0;
    gap: {{ section.settings.mobile_distance }}%;
  }

  .hss-promo-item-wrapper {
    width: auto;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
  }

  .hexagon {
    width: {{ section.settings.mobile_size }}px;
    height: {{ section.settings.mobile_size }}px;
  }

  .hss-promo-title {
    max-width: {{ section.settings.mobile_size }}px;
  }
}

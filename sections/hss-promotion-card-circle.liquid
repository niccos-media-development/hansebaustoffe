  "name": "HSS Promotion Card Circle",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "default": "#f2f2f2",
      "label": "Hintergrundfarbe"
    },
    {
      "type": "color",
      "id": "icon_background",
      "default": "#ffffff",
      "label": "Hintergrundfarbe der Icons"
    },
    {
      "type": "range",
      "id": "desktop_size",
      "min": 50,
      "max": 150,
      "step": 1,
      "default": 92,
      "label": "GrÃ¶ÃŸe der Icons (Desktop, px)"
    },
    {
      "type": "range",
      "id": "desktop_distance",
      "min": 0,
      "max": 60,
      "step": 1,
      "default": 9,
      "label": "Abstand zwischen Icons (Desktop, px)"
    },
    {
      "type": "range",
      "id": "items_per_row",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "Anzahl sichtbarer Icons (Desktop)"

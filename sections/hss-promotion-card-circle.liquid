<div class="hss-promo-carousel">
  <div class="hss-promo-carousel-holder" id="carousel-{{ section.id }}">
    {% for block in section.blocks %}
      <a href="{{ block.settings.url }}" class="hss-promo-item">
        <div class="hss-promo-image {% if block.settings.highlight %}hss-promo-highlight{% endif %}">
          <img src="{{ block.settings.image | img_url: '200x' }}" alt="{{ block.settings.heading }}">
        </div>
        <span class="hss-promo-title">{{ block.settings.heading }}</span>
      </a>
    {% endfor %}
  </div>
</div>

<style>
  .hss-promo-carousel {
    background: {{ section.settings.background_color }};
    padding: 20px 0;
    overflow: hidden;
  }

  .hss-promo-carousel-holder {
    display: flex;
    gap: {{ section.settings.desktop_distance }}px;
    overflow: hidden;
    scroll-behavior: smooth;
    white-space: nowrap;
    position: relative;
  }

  .hss-promo-item {
    text-align: center;
    text-decoration: none;
    font-size: {{ section.settings.fontsize }}px;
    font-weight: 600;
    color: {{ section.settings.text_color }};
    font-family: {{ section.settings.font.family }}, sans-serif;
  }

  .hss-promo-image {
    width: {{ section.settings.desktop_size }}px;
    height: {{ section.settings.desktop_size }}px;
    border-radius: {{ section.settings.border_radius }}px;
    overflow: hidden;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hss-promo-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hss-promo-highlight::after {
    content: '';
    border: 2px solid {{ section.settings.highlight_color }};
    border-radius: {{ section.settings.border_radius }}px;
    width: 110%;
    height: 110%;
    position: absolute;
    top: -5%;
    left: -5%;
  }

  .hss-promo-title {
    display: block;
    margin-top: 5px;
  }

  @media only screen and (max-width: 768px) {
    .hss-promo-carousel-holder {
      gap: {{ section.settings.mobile_distance }}%;
    }

    .hss-promo-image {
      width: {{ section.settings.mobile_size }}%;
      height: auto;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const container = document.querySelector("#carousel-{{ section.id }}");
    let scrollAmount = 0;
    let autoScroll;

    function startAutoScroll() {
      if ({{ section.settings.auto_rotate }}) {
        autoScroll = setInterval(() => {
          if (scrollAmount >= container.scrollWidth - container.clientWidth) {
            scrollAmount = 0;
          } else {
            scrollAmount += container.clientWidth / {{ section.settings.items_per_view }};
          }
          container.scrollTo({ left: scrollAmount, behavior: "smooth" });
        }, {{ section.settings.auto_rotate_speed }} * 1000); // Umwandlung von Sekunden in ms
      }
    }

    function stopAutoScroll() {
      clearInterval(autoScroll);
    }

    container.addEventListener("mouseenter", stopAutoScroll);
    container.addEventListener("mouseleave", startAutoScroll);

    startAutoScroll();
  });
</script>

{% schema %}
{
  "name": "HSS Promotion Card Circle",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "default": "#f2f2f2",
      "label": "Hintergrundfarbe"
    },
    {
      "type": "range",
      "id": "desktop_size",
      "min": 50,
      "max": 150,
      "step": 1,
      "default": 92,
      "label": "Größe der Icons (Desktop, px)"
    },
    {
      "type": "range",
      "id": "desktop_distance",
      "min": 0,
      "max": 60,
      "step": 1,
      "default": 9,
      "label": "Abstand zwischen Icons (Desktop, px)"
    },
    {
      "type": "range",
      "id": "mobile_size",
      "min": 13,
      "max": 36,
      "step": 1,
      "default": 20,
      "label": "Größe der Icons (Mobile, %)"
    },
    {
      "type": "range",
      "id": "mobile_distance",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 2,
      "label": "Abstand zwischen Icons (Mobile, %)"
    },
    {
      "type": "font_picker",
      "id": "font",
      "default": "sans-serif",
      "label": "Schriftart"
    },
    {
      "type": "range",
      "id": "fontsize",
      "min": 6,
      "max": 24,
      "step": 1,
      "default": 12,
      "label": "Schriftgröße"
    },
    {
      "type": "color",
      "id": "text_color",
      "default": "#000",
      "label": "Schriftfarbe"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 100,
      "label": "Abrundung der Bilder"
    },
    {
      "type": "color",
      "id": "highlight_color",
      "default": "#c4258d",
      "label": "Rahmenfarbe für Hervorhebung"
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "Auto-Rotation aktivieren",
      "default": true
    },
    {
      "type": "range",
      "id": "auto_rotate_speed",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 3,
      "label": "Auto-Rotation Geschwindigkeit (Sekunden)"
    },
    {
      "type": "range",
      "id": "items_per_view",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "Sichtbare Icons"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Promotion Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Bild"
        },
        {
          "type": "text",
          "id": "heading",
          "default": "Kategorie",
          "label": "Titel"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link"
        },
        {
          "type": "checkbox",
          "id": "highlight",
          "label": "Hervorheben"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "HSS Promotion Card Circle",
      "blocks": [
        { "type": "block" },
        { "type": "block" },
        { "type": "block" }
      ]
    }
  ]
}
{% endschema %}

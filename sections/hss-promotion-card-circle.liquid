      "default": true
    },
    {
      "type": "range",
      "id": "auto_rotate_speed",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 3,
      "label": "Auto-Rotation Geschwindigkeit (Sekunden)"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Kategorie",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Bild"
        },
        {
          "type": "text",
          "id": "heading",
          "default": "Kategorie",
          "label": "Titel"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "HSS Promotion Card Circle",
      "blocks": [
        { "type": "category" },
        { "type": "category" },
        { "type": "category" }
      ]
    }
  ]
}
{% endschema %}

{{ 'flickity.css' | asset_url | stylesheet_tag }}
<script src="{{ 'flickity.pkgd.js' | asset_url }}" defer="defer"></script>

<div class="hss-promo-carousel">
  <div class="hss-promo-carousel-holder" id="carousel-{{ section.id }}">
    {% for block in section.blocks %}
      <a href="{{ block.settings.url }}" class="hss-promo-item">
        <div class="hss-promo-image {% if block.settings.highlight %}hss-promo-highlight{% endif %}">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | img_url: '200x' }}" alt="{{ block.settings.heading }}">
          {% else %}
            <div class="hss-placeholder">Kein Bild</div>
          {% endif %}
        </div>
        {% if block.settings.heading != blank %}
          <span class="hss-promo-title">{{ block.settings.heading }}</span>
        {% else %}
          <span class="hss-promo-title">Kein Titel</span>
        {% endif %}
      </a>
    {% endfor %}
  </div>
</div>

<style>
  .hss-promo-carousel {
    background: {{ section.settings.background_color }};
    padding: 20px 0;
    position: relative;
  }

  /* Fix: Verhindert, dass das Karussell ausgeblendet wird */
  .hss-promo-carousel-holder {
    display: flex;
    gap: {{ section.settings.desktop_distance }}px;
    white-space: nowrap;
    max-width: 100%;
    overflow: hidden;
    opacity: 0; /* Wird durch JS sichtbar gemacht */
    transition: opacity 0.5s ease-in-out;
  }

  /* Flickity lÃ¤dt -> Karussell wird sichtbar */
  .hss-promo-carousel-holder.is-visible {
    opacity: 1;
  }

  .hss-promo-item {
    text-align: center;
    text-decoration: none;
    font-size: {{ section.settings.fontsize }}px;
    font-weight: 600;
    color: {{ section.settings.text_color }};
    font-family: {{ section.settings.font.family }}, sans-serif;
    flex: 0 0 auto;
  }

  .hss-promo-image {
    width: {{ section.settings.desktop_size }}px;
    height: {{ section.settings.desktop_size }}px;
    border-radius: 50%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ section.settings.icon_background }};
  }

  .hss-promo-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  .hss-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
    color: #666;
    background: #ddd;
    border-radius: 50%;
  }

  .hss-promo-title {
    display: block;
    margin-top: 5px;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    var carousel = document.querySelector("#carousel-{{ section.id }}");

    if (!carousel) {
      console.error("ðŸš¨ Fehler: Karussell-Element wurde nicht gefunden!");
      return;
    }

    console.log("âœ… Flickity wird gestartet...");

    var flickityInstance = new Flickity(carousel, {
      cellAlign: "left",
      contain: true,
      wrapAround: false,
      prevNextButtons: true,
      pageDots: false,
      groupCells: {{ section.settings.items_per_row }},
      autoPlay: {% if section.settings.auto_rotate %}{{ section.settings.auto_rotate_speed }} * 1000{% else %}false{% endif %}
    });

    if (flickityInstance) {
      console.log("âœ… Flickity erfolgreich geladen!");
      carousel.classList.add("is-visible"); // Fix: Zeigt das Karussell an
    } else {
      console.error("ðŸš¨ Fehler: Flickity konnte nicht gestartet werden.");
    }
  });
</script>

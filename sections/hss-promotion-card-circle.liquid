{%- if section.settings.layout == 'slider' -%}
	{{ 'flickity.css' | asset_url | stylesheet_tag }}
	<script src="{{ 'flickity.pkgd.js' | asset_url }}" defer="defer"></script>
	<script src="{{ 'carousel-slider.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

<style>
  /* Abstand oben und unten */
  #shopify-section-{{ section.id }} {
    margin-top: {{ section.settings.spacing_top }}px;
    margin-bottom: {{ section.settings.spacing_bottom }}px;
  }

  /* Desktop-Grid */
  #shopify-section-{{ section.id }} .hss-promo-card-container {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
    gap: 20px;
  }

  /* Mobile Darstellung als Scroller */
  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} .hss-promo-card-container {
      display: flex;
      overflow-x: auto;
      white-space: nowrap;
      scroll-snap-type: x mandatory;
      padding: 10px;
      gap: 10px;
    }

    #shopify-section-{{ section.id }} .hss-promo-card {
      flex: 0 0 auto;
      scroll-snap-align: center;
    }
  }

  /* Runde Card */
  #shopify-section-{{ section.id }} .hss-promo-card {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 10px;
    transition: transform 0.3s ease-in-out;
  }

  #shopify-section-{{ section.id }} .hss-promo-card:hover {
    transform: scale(1.05);
  }

  /* Bild in der runden Card */
  #shopify-section-{{ section.id }} .hss-promo-card img {
    width: 80%;
    height: auto;
    border-radius: 50%;
    object-fit: cover;
  }

  /* Titel unter der runden Card */
  #shopify-section-{{ section.id }} .hss-promo-card p {
    font-size: 14px;
    color: #000;
    margin-top: 5px;
    text-align: center;
  }
</style>

<div class="color-{{ section.settings.color_scheme }}">
  <div class="container">
    <div class="hss-promo-card-container">
      {% for block in section.blocks %}
        <div class="hss-promo-card" style="background-color: {{ block.settings.card_background }};">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | img_url: '300x300' }}" alt="{{ block.settings.title }}">
          {% endif %}
          <p>{{ block.settings.title }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "HSS Promotion Card Circle",
  "settings": [
    {
      "type": "range",
      "id": "spacing_top",
      "label": "Abstand oben",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "spacing_bottom",
      "label": "Abstand unten",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Anzahl der Spalten auf Desktop",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "card_size",
      "label": "Größe der runden Karte",
      "min": 100,
      "max": 400,
      "step": 10,
      "default": 250
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Promotion Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Bild"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titel",
          "default": "Promotion"
        },
        {
          "type": "color",
          "id": "card_background",
          "label": "Hintergrundfarbe der Karte",
          "default": "#f8f8f8"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "HSS Promotion Card Circle",
      "blocks": [
        {
          "type": "card"
        },
        {
          "type": "card"
        },
        {
          "type": "card"
        }
      ]
    }
  ]
}
{% endschema %}

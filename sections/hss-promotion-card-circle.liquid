<div class="hss-promo-carousel">
  <div class="hss-promo-carousel-holder" id="carousel-{{ section.id }}">
    {% for block in section.blocks %}
      <a href="{{ block.settings.url }}" class="hss-promo-item">
        <div class="hss-promo-container">
          <div class="hss-promo-border">
            <div class="hss-promo-image hexagon">
              {% if block.settings.image %}
                <img src="{{ block.settings.image | img_url: '200x' }}" alt="{{ block.settings.heading }}">
              {% else %}
                <div class="hss-placeholder">+</div>
              {% endif %}
            </div>
          </div>
          {% if block.settings.heading != blank %}
            <span class="hss-promo-title">{{ block.settings.heading }}</span>
          {% endif %}
        </div>
      </a>
    {% endfor %}
  </div>
</div>

<style>
  .hss-promo-carousel {
    background: {{ section.settings.background_color }};
    padding: 20px 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hss-promo-carousel-holder {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: {{ section.settings.desktop_distance }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    white-space: nowrap;
    position: relative;
    max-width: 100%;
    padding: 10px;
  }

  .hss-promo-carousel-holder::-webkit-scrollbar {
    display: none;
  }

  .hss-promo-item {
    text-align: center;
    text-decoration: none;
    font-size: {{ section.settings.fontsize }}px;
    font-weight: 600;
    color: {{ section.settings.text_color }};
    font-family: {{ section.settings.font.family }}, sans-serif;
    flex: 0 0 auto;
  }

  /* Hexagon mit Rand */
  .hss-promo-border {
    width: {{ section.settings.desktop_size | times: 1.15 }}px;
    height: {{ section.settings.desktop_size | times: 1.27 }}px;
    background-color: {{ section.settings.hexagon_border_color }};
    clip-path: polygon(
      50% 0%, 100% 25%, 100% 75%,
      50% 100%, 0% 75%, 0% 25%
    );
    display: flex;
    align-items: center;
    justify-content: center;
    padding: {{ section.settings.hexagon_border_width }}px;
  }

  .hexagon {
    width: {{ section.settings.desktop_size }}px;
    height: {{ section.settings.desktop_size | times: 1.15 }}px;
    background-color: {{ section.settings.icon_background }};
    clip-path: polygon(
      50% 0%, 100% 25%, 100% 75%,
      50% 100%, 0% 75%, 0% 25%
    );
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hexagon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hss-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    color: #ccc;
    background: #f5f5f5;
  }

  /* Titel bleibt immer unter dem Hexagon */
  .hss-promo-title {
    display: block;
    margin-top: 5px;
    max-width: {{ section.settings.desktop_size }}px;
    word-wrap: break-word;
    overflow-wrap: break-word;
    text-align: center;
    white-space: normal;
    line-height: 1.2;
    font-size: {{ section.settings.fontsize }}px;
    max-height: 3.6em;
    overflow: hidden;
  }

  @media only screen and (max-width: 768px) {
    .hss-promo-carousel-holder {
      justify-content: flex-start;
      padding: 10px 0;
      gap: {{ section.settings.mobile_distance }}%;
    }

    .hss-promo-border {
      width: {{ section.settings.mobile_size | times: 1.15 }}px;
      height: {{ section.settings.mobile_size | times: 1.27 }}px;
    }

    .hexagon {
      width: {{ section.settings.mobile_size }}px;
      height: {{ section.settings.mobile_size | times: 1.15 }}px;
    }

    .hss-promo-title {
      max-width: {{ section.settings.mobile_size }}px;
    }
  }
</style>

{% schema %}
{
  "name": "HSS Hexagon Cards",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "default": "#f2f2f2",
      "label": "Hintergrundfarbe"
    },
    {
      "type": "color",
      "id": "icon_background",
      "default": "#ffffff",
      "label": "Hintergrundfarbe der Hexagons"
    },
    {
      "type": "color",
      "id": "hexagon_border_color",
      "default": "#000000",
      "label": "Randfarbe des Hexagons"
    },
    {
      "type": "range",
      "id": "hexagon_border_width",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 5,
      "label": "Randbreite des Hexagons (px)"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Kategorie",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Bild"
        },
        {
          "type": "text",
          "id": "heading",
          "default": "Kategorie",
          "label": "Titel"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "HSS Hexagon Cards",
      "blocks": [
        { "type": "category" },
        { "type": "category" },
        { "type": "category" }
      ]
    }
  ]
}
{% endschema %}

{{ 'component-collage.css' | asset_url | stylesheet_tag }}
{{ 'component-pills.css' | asset_url | stylesheet_tag }}
{{ 'component-scroller.css' | asset_url | stylesheet_tag }}

{%- if section.settings.layout == 'slider' -%}
  {{ 'flickity.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'flickity.pkgd.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'carousel-slider.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

<style>
  /* Abstand oben und unten für den gesamten Abschnitt */
  #shopify-section-{{ section.id }} {
    margin-top: {{ section.settings.spacing_top }}px;
    margin-bottom: {{ section.settings.spacing_bottom }}px;
  }

  /* --- DESKTOP: Grid-Layout mit konfigurierbaren Spalten --- */
  #shopify-section-{{ section.id }} .hss-promo-card-container {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
    gap: 20px;
  }

  /* --- MOBILE: Horizontaler Scroller --- */
  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} .hss-promo-card-container {
      display: flex;
      overflow-x: auto;
      white-space: nowrap;
      scroll-snap-type: x mandatory;
      gap: 10px;
      padding: 10px 0;
    }

    #shopify-section-{{ section.id }} .hss-promo-card {
      flex: 0 0 auto;
      scroll-snap-align: center;
      width: {{ section.settings.card_size_mobile }}px;
      height: auto;
    }
  }

  /* Allgemeine Styles für die Karten */
  #shopify-section-{{ section.id }} .hss-promo-card {
    width: {{ section.settings.card_size }}px;
    text-align: center;
  }

  /* Bild in der runden Card */
  #shopify-section-{{ section.id }} .hss-promo-card img {
    width: 100%;
    max-width: {{ section.settings.card_size }}px;
    height: auto;
    border-radius: 50%;
    object-fit: cover;
    background-color: {{ section.settings.card_background }};
    padding: 10px;
  }

  /* Titel unter dem Bild */
  #shopify-section-{{ section.id }} .hss-promo-card h3 {
    font-size: 14px;
    margin-top: 8px;
    color: {{ section.settings.text_color }};
    white-space: normal;
  }
</style>

<div class="color-{{ section.settings.color_scheme }}">
  <div class="container">
    <div class="hss-promo-card-container">
      {% for block in section.blocks %}
        <div class="hss-promo-card">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | img_url: '300x300' }}" alt="{{ block.settings.title }}">
          {% endif %}
          {% if block.settings.title != blank %}
            <h3>{{ block.settings.title }}</h3>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "HSS Promotion Card Circle",
  "settings": [
    {
      "type": "range",
      "id": "spacing_top",
      "label": "Abstand oben",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "spacing_bottom",
      "label": "Abstand unten",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Anzahl der Spalten auf Desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "card_size",
      "label": "Größe der runden Karte (Desktop)",
      "min": 100,
      "max": 400,
      "step": 10,
      "default": 120
    },
    {
      "type": "range",
      "id": "card_size_mobile",
      "label": "Größe der runden Karte (Mobile)",
      "min": 60,
      "max": 200,
      "step": 10,
      "default": 80
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Textfarbe",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "card_background",
      "label": "Hintergrundfarbe der runden Bilder",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Promotion Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Bild"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titel",
          "default": "Promotion"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "HSS Promotion Card Circle",
      "blocks": [
        {
          "type": "card"
        },
        {
          "type": "card"
        },
        {
          "type": "card"
        }
      ]
    }
  ]
}
{% endschema %}

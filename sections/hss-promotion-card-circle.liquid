{%- if section.settings.layout == 'slider' -%}
  {{ 'flickity.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'flickity.pkgd.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'carousel-slider.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

<style>
  /* Abstand oben und unten für den ganzen Abschnitt */
  #shopify-section-{{ section.id }} {
    margin-top: {{ section.settings.spacing_top }}px;
    margin-bottom: {{ section.settings.spacing_bottom }}px;
  }

  /* --- DESKTOP: Grid-Layout mit konfigurierbaren Spalten --- */
  #shopify-section-{{ section.id }} .hss-promo-card-container {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
    gap: 20px;
    text-align: center;
  }

  /* --- MOBILE: Horizontaler Scroller --- */
  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} .hss-promo-card-container {
      display: flex;
      overflow-x: auto;
      white-space: nowrap;
      scroll-snap-type: x mandatory;
      gap: 10px;
      padding: 10px 0;
    }

    #shopify-section-{{ section.id }} .hss-promo-card {
      flex: 0 0 auto;
      scroll-snap-align: center;
      width: {{ section.settings.card_size_mobile }}px;
      height: auto;
    }
  }

  /* Die klickbare Karte */
  #shopify-section-{{ section.id }} .hss-promo-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    cursor: pointer;
    text-decoration: none;
  }

  /* Rundes Bild */
  #shopify-section-{{ section.id }} .hss-promo-card .hss-promo-image {
    width: {{ section.settings.card_size }}px;
    height: {{ section.settings.card_size }}px;
    border-radius: 50%;
    overflow: hidden;
    background-color: {{ section.settings.card_background }};
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease-in-out;
  }

  #shopify-section-{{ section.id }} .hss-promo-card:hover .hss-promo-image {
    transform: scale(1.05);
  }

  /* Bild in der runden Form */
  #shopify-section-{{ section.id }} .hss-promo-card img {
    width: 80%;
    height: auto;
    object-fit: cover;
  }

  /* Titel unter dem Bild */
  #shopify-section-{{ section.id }} .hss-promo-card .hss-promo-title {
    font-size: 14px;
    margin-top: 5px;
    color: {{ section.settings.text_color }};
    font-weight: bold;
  }
</style>

<div class="color-{{ section.settings.color_scheme }}">
  <div class="container">
    <div class="hss-promo-card-container">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="hss-promo-card">
          <div class="hss-promo-image">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | img_url: '300x300' }}" alt="{{ block.settings.title }}">
            {% endif %}
          </div>
          {% if block.settings.title != blank %}
            <div class="hss-promo-title">{{ block.settings.title }}</div>
          {% endif %}
        </a>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "HSS Promotion Card Circle",
  "settings": [
    {
      "type": "range",
      "id": "spacing_top",
      "label": "Abstand oben",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "spacing_bottom",
      "label": "Abstand unten",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Anzahl der Spalten auf Desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "card_size",
      "label": "Größe der runden Karte (Desktop)",
      "min": 100,
      "max": 400,
      "step": 10,
      "default": 120
    },
    {
      "type": "range",
      "id": "card_size_mobile",
      "label": "Größe der runden Karte (Mobile)",
      "min": 60,
      "max": 200,
      "step": 10,
      "default": 80
    },
    {
      "type": "color",
      "id": "card_background",
      "label": "Hintergrundfarbe der runden Karte",
      "default": "#f8f8f8"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Textfarbe",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Promotion Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Bild"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titel",
          "default": "Kategorie"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "HSS Promotion Card Circle",
      "blocks": [
        {
          "type": "card"
        },
        {
          "type": "card"
        },
        {
          "type": "card"
        }
      ]
    }
  ]
}
{% endschema %}

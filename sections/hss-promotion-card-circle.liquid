<div class="hss-promo-carousel">
  <div class="hss-promo-carousel-holder" id="carousel-{{ section.id }}">
    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        <a href="{{ block.settings.url }}" class="hss-promo-item-wrapper">
          <div class="hss-promo-item">
            <div class="hss-promo-image">
              <div class="hexagon">
                {% if block.settings.image %}
                  <div class="hexagon-img-wrapper">
                    <img class="hexagon-img" src="{{ block.settings.image | img_url: '200x' }}" alt="{{ block.settings.heading }}">
                  </div>
                {% else %}
                  <div class="hss-placeholder">+</div>
                {% endif %}
              </div>
            </div>
            <div class="hss-promo-title-wrapper">
              <span class="hss-promo-title">{{ block.settings.heading }}</span>
            </div>
          </div>
        </a>
      {% endfor %}
    {% else %}
      <p class="hss-no-content">⚠️ Keine Kategorien hinzugefügt. Bitte im Shopify-Editor Blöcke hinzufügen.</p>
    {% endif %}
  </div>
  <div class="slider-nav">
    <button class="prev">&#8592;</button>
    <button class="next">&#8594;</button>
  </div>
</div>

<style>
  .hss-promo-carousel {
    background: {{ section.settings.background_color }};
    padding: 20px 0;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: {{ section.settings.top_margin }}px auto {{ section.settings.bottom_margin }}px;
    position: relative;
    overflow: hidden;
  }

  .hss-promo-carousel-holder {
    display: flex;
    gap: {{ section.settings.desktop_distance }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    max-width: 100%;
    padding: 10px;
    width: 100%;
    flex-wrap: nowrap;
  }

  .hss-promo-carousel-holder::-webkit-scrollbar {
    display: none;
  }

  .hss-promo-item-wrapper {
    text-align: center;
    font-size: {{ section.settings.fontsize }}px;
    font-weight: 600;
    color: {{ section.settings.text_color }};
    font-family: {{ section.settings.font.family }}, sans-serif;
    text-decoration: none;
    display: block;
    flex: 0 0 auto;
  }

  .hexagon {
    width: {{ section.settings.mobile_size }}px;
    height: {{ section.settings.mobile_size }}px;
    background-color: {{ section.settings.icon_background }};
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hexagon-img-wrapper {
    width: 100%;
    height: 100%;
    overflow: hidden;
    clip-path: inherit;
  }

  .hexagon-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hss-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    color: #ccc;
    background: #f5f5f5;
  }

  .hss-promo-title-wrapper {
    margin-top: 10px;
  }

  .hss-promo-title {
    word-wrap: break-word;
    overflow-wrap: break-word;
    text-align: center;
    white-space: normal;
    line-height: 1.2;
    font-size: {{ section.settings.fontsize }}px;
    max-width: 100%;
    max-height: 3.6em;
    overflow: hidden;
    hyphens: auto;
    color: {{ section.settings.title_text_color }} !important;
  }

  .slider-nav {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    transform: translateY(-50%);
    padding: 0 10px;
  }

  .prev, .next {
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    border: none;
    padding: 10px;
    cursor: pointer;
    font-size: 24px;
  }

  .prev:hover, .next:hover {
    background-color: rgba(0, 0, 0, 0.8);
  }
</style>

<script>
  document.querySelector('.next').addEventListener('click', function() {
    document.querySelector('.hss-promo-carousel-holder').scrollBy({ left: 200, behavior: 'smooth' });
  });

  document.querySelector('.prev').addEventListener('click', function() {
    document.querySelector('.hss-promo-carousel-holder').scrollBy({ left: -200, behavior: 'smooth' });
  });
</script>

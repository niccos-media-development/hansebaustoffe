{% assign hexagon_size = 100 %}
{% assign hexagon_size_mobile = 80 %}
{% assign hexagon_spacing = 25 %}
{% assign hexagon_spacing_mobile = 10 %}
{% assign top_margin = 0 %}
{% assign bottom_margin = 0 %}
{% assign background_color = '#F3F3F3' %}
{% assign hexagon_color = '#FFFFFF' %}

<div class="hexagon-slider" style="background-color: {{ background_color }}; margin-top: {{ top_margin }}px; margin-bottom: {{ bottom_margin }}px;">
  <div class="hexagon-container">
    <div class="hexagon" style="width: {{ hexagon_size }}px; height: {{ hexagon_size }}px; background-color: {{ hexagon_color }};">
      <img src="{{ 'file-Tox1CobrEi9KcCC854Utwt' | file_url }}" alt="Hexagon Image" style="width: 100%; height: 100%; object-fit: cover;">
    </div>
  </div>
</div>

<style>
  .hexagon {
    display: inline-block;
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    margin-right: {{ hexagon_spacing }}px;
    margin-bottom: {{ hexagon_spacing }}px;
  }

  @media (max-width: 768px) {
    .hexagon {
      width: {{ hexagon_size_mobile }}px;
      height: {{ hexagon_size_mobile }}px;
      margin-right: {{ hexagon_spacing_mobile }}px;
    }
  }
</style>

<style>
  .hss-promo-carousel {
    background: {{ section.settings.background_color }};
    padding: 20px 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hss-promo-carousel-holder {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: {{ section.settings.desktop_distance }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    white-space: nowrap;
    position: relative;
    max-width: 100%;
    padding: 10px;
  }

  .hss-promo-carousel-holder::-webkit-scrollbar {
    display: none;
  }

  .hss-promo-item {
    text-align: center;
    text-decoration: none;
    font-size: {{ section.settings.fontsize }}px;
    font-weight: 600;
    color: {{ section.settings.text_color }};
    font-family: {{ section.settings.font.family }}, sans-serif;
    flex: 0 0 auto;
  }

  /* HEXAGON-FORM */
  .hexagon {
    width: {{ section.settings.desktop_size }}px;
    height: {{ section.settings.desktop_size | times: 1.15 }}px;
    background-color: {{ section.settings.icon_background }};
    position: relative;
    clip-path: polygon(
      50% 0%, 100% 25%, 100% 75%,
      50% 100%, 0% 75%, 0% 25%
    );
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  /* Pseudo-Element for Border */
  .hexagon::before {
    content: '';
    position: absolute;
    top: -{{ section.settings.border_width }}px;
    left: -{{ section.settings.border_width }}px;
    right: -{{ section.settings.border_width }}px;
    bottom: -{{ section.settings.border_width }}px;
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    clip-path: inherit; /* Same hexagonal clip-path */
    z-index: -1; /* Ensure the border is behind the image */
  }

  .hexagon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hss-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    color: #ccc;
    background: #f5f5f5;
  }

  .hss-promo-title {
    display: block;
    margin-top: 5px;
    max-width: {{ section.settings.desktop_size }}px;
    word-wrap: break-word;
    overflow-wrap: break-word;
    text-align: center;
    white-space: normal;
    line-height: 1.2;
    font-size: {{ section.settings.fontsize }}px;
    max-height: 3.6em;
    overflow: hidden;
  }

  .hss-no-content {
    text-align: center;
    font-size: 18px;
    color: red;
    font-weight: bold;
  }

  @media only screen and (max-width: 768px) {
    .hss-promo-carousel-holder {
      justify-content: flex-start;
      padding: 10px 0;
      gap: {{ section.settings.mobile_distance }}%;
    }

    .hss-promo-item {
      flex: 0 0 auto;
      margin: 0 auto;
    }

    .hexagon {
      width: {{ section.settings.mobile_size }}px;
      height: {{ section.settings.mobile_size | times: 1.15 }}px;
    }

    .hss-promo-title {
      max-width: {{ section.settings.mobile_size }}px;
    }
  }
</style>

<div class="product-form-input line-item-property">
    <label class="form-label" for="LineItemProperty-{{ block.settings.key }}">{{ block.settings.label }}</label>
    <select name="properties[{{ block.settings.key }}]" id="LineItemProperty-{{ block.settings.key }}" class="select__select" form="{{ product_form_id }}">
        {%- assign options = block.settings.option_list | split: '|' | compact %}
        {%- for _option in options -%}
            {%- assign option = _option | strip %}
            <option
                {% if forloop.first %}selected="selected"{% endif %}
                value="{{ option }}"
            >
                {{ option }}
            </option>
        {%- endfor -%}
    </select>
</div>